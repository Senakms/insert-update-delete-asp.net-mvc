@model IEnumerable<project01.Models.Table>
@{
    ViewBag.Title = "Index";
}

<h2>Records</h2>
@Html.ActionLink("New Record", "newRecord", null, new { @class = "btn btn-primary" }) <br />

<table class="table">
    <tr>
        <td><b>ID</b></td>
        <td><b>Name Surname</b></td>
        <td><b>Email</b></td>
        <td><b>Age</b></td>
        <td><b>Gsm</b></td>
        <td><b>Address</b></td>
        <td><b>City</b></td>
        <td><b>Update</b></td>
        <td><b>Delete</b></td>
    </tr>
    @foreach (var record in Model)
    {
        <tr>
            <td>@record.Id</td>
            <td>@record.NameSurname</td>
            <td>@record.Email</td>
            <td>@record.Age</td>
            <td>@record.Gsm</td>
            <td>@record.Address</td>
            <td>@record.City</td>
            <td>@Html.ActionLink("Update", "updateRecord", new { id = record.Id }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Delete", "deleteRecord", new { id = record.Id }, new { @class = "btn btn-danger" })</td>          
        </tr>
    }
</table>


